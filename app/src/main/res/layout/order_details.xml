<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/plain_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Order Confirmation"
            android:layout_marginTop="5dp"
            android:background="@drawable/heading_bg"
            android:textColor="@color/mTeal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/mWhite">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Order Details"
                android:textStyle="bold"
                android:id="@+id/existing"
                android:textColor="@color/mTeal" />
            <TextView
                android:id="@+id/invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/grey_text"
                />
            <TextView
                android:id="@+id/fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/grey_text"
                />
            <TextView
                android:id="@+id/lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/grey_text"
                />
            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/grey_text"
                />
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@color/grey_text"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textColor="@color/mWhite"
                android:background="@drawable/login_selector"
                android:text="Finish"
                android:textSize="18sp"
                android:textColorHighlight="@color/mWhite"
                android:singleLine="false"
                android:onClick="finish"/></LinearLayout>

    </LinearLayout>

</ScrollView>